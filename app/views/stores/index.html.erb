<div>
  <div>
    <h1>
      Add a new store/supermarket that you would like to shop at!
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new store/supermarket location
    </h2>

    <form action="/insert_store" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <p>
      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>
      </p>
      <p>
      <div>
        <label for="phone_number_box">
          Phone number
        </label>

        <input type="text" id="phone_number_box" name="query_phone_number">
      </div>
      </p>
      <button>
        Create store!
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Phone number
        </th>

        <th>
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_stores.each do |a_store| %>
      <tr>
        <td>
          <%= a_store.name %>
        </td>

        <td>
          <%= a_store.address %>
        </td>

        <td>
          <%= number_to_phone(a_store.phone_number, area_code: true) %>
        </td>

        <td>
          <a href="/delete_store/<%= a_store.id %>">
            Delete this store/supermarket
          </a>
        </td>

        <td>
          <a href="/stores/<%= a_store.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
