<div>
  <div>
    <h1>
      Here are the details about the <%= @the_store.name %> store.
    </h1>

    <div>
      <div>
        <a href="/stores">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_store/<%= @the_store.id %>">
          Delete store
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_store.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @the_store.address %>
      </dd>

      <dt>
        Phone number
      </dt>
      <dd>
        <%= number_to_phone(@the_store.phone_number, area_code: true) %>
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit store
    </h2>

    <form action="/modify_store/<%= @the_store.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_store.name %>">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" value="<%= @the_store.address %>">
      </div>

      <div>
        <label for="phone_number_box">
          Phone number
        </label>

        <input type="text" id="phone_number_box" name="query_phone_number" value="<%= @the_store.phone_number %>">
      </div>

      <button>
        Update store!
      </button>
    </form>
  </div>
</div>

<hr>
