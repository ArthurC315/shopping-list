<div>
  <div>
    <h1>
      Here are the details about the <%=@the_item.quantity%> counts of <%=@the_item.name%>.
    </h1>

    <div>
      <div>
        <a href="/items">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_item/<%= @the_item.id %>">
          Delete item
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Item Name
      </dt>
      <dd>
        <%= @the_item.name %>
      </dd>

      <dt>
        Item Quantity
      </dt>
      <dd>
        <%= @the_item.quantity %>
      </dd>

      <dt>
        Item Approximate Price
      </dt>
      <dd>
        <%= @the_item.price %>
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit item properties
    </h2>

    <form action="/modify_item/<%= @the_item.id %>"  method="post" >
      <div>
        <label for="name_box">
          Item:
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_item.name %>">
      </div>

      <div>
        <label for="quantity_box">
          Quantity:
        </label>

        <input type="number" id="quantity_box" name="query_quantity" value="<%= @the_item.quantity %>">
      </div>

      <div>
        <label for="price_box">
          Approximate Price:
        </label>

        <input type="number" step="0.01" id="price_box" name="query_price" value="<%= @the_item.price %>">
      </div>

      <button>
        Update item!
      </button>
    </form>
  </div>
</div>

<hr>
