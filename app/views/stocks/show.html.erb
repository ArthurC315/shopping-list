<div>
  <div>
    <h1>
      Stock #<%= @the_stock.id %> details
    </h1>

    <div>
      <div>
        <a href="/stocks">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_stock/<%= @the_stock.id %>">
          Delete stock
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Item
      </dt>
      <dd>
        <%= @the_stock.item_id %>
      </dd>

      <dt>
        Store
      </dt>
      <dd>
        <%= @the_stock.store_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_stock.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_stock.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit stock
    </h2>

    <form action="/modify_stock/<%= @the_stock.id %>"  method="post" >
      <div>
        <label for="item_id_box">
          Item
        </label>

        <input type="text" id="item_id_box" name="query_item_id" value="<%= @the_stock.item_id %>">
      </div>

      <div>
        <label for="store_id_box">
          Store
        </label>

        <input type="text" id="store_id_box" name="query_store_id" value="<%= @the_stock.store_id %>">
      </div>

      <button>
        Update stock
      </button>
    </form>
  </div>
</div>

<hr>
